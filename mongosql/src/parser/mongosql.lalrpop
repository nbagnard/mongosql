  }
}

Double: Literal = {
  DOUBLE =>? {
     let d: Result<f64, ParseError<usize, Token, String>> =
       f64::from_str(<>)
           .map_err(|_| ParseError::from("failed to convert number to f64".to_string()));
     match d {
       Ok(x) => Ok(Literal::Double(x)),
       Err(x) => Err(x)
     }
   },
}

Unsigned32: u32 = {
