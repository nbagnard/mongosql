    let u: Result<u32, ParseError<usize, Token, String>> =
      u32::from_str(<>)
          .map_err(|_| ParseError::from("failed to convert number to u32".to_string()));
    match u {
      Ok(x) => Ok(x),
      Err(x) => Err(x)
    }
  },
}

